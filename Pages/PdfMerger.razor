@inject IJSRuntime JSRuntime


<!-- Wrapper -->
<div id="wrapper">

    <!-- Header -->
    <header id="header">

        <h1>PDF Merger</h1>

        @if (! string.IsNullOrEmpty(ThemeIcon))
        {
            <a id="themeSwitch" @onclick="ToggleFullTheme" class="@ThemeIcon" style="margin-top: 1.3em;" title="Change Theme"></a>
        }

    </header>


    <!-- Main -->
    <div style="text-align: center;">

        <section id="intro" class="@SpecialSectionTheme">

            @if (! @IsSubmitComplete)
            {
                <div>

                    <h2>Upload your PDF files.</h2>
                    <h4>Limit - 20 Files / 5 MB Each</h4>

                    <br>

                    <p>
                        <InputFile OnChange="OnInputFileChange" multiple></InputFile>
                    </p>

                    <p>
                        <h2>@UploadMessage</h2>
                    </p>

                    @if (TotalFiles > MaxFilesAllowed || TotalSize > MaxSizeAllowed)
                    {
                        <p>
                            <h2>@UploadErrorMessage</h2>
                            <h1>üò¢</h1>
                        </p>
                    }

                    @if (@IsUploadComplete)
                    {
                        <p>
                            <button class="button primary large icon solid fas fa-file-upload" @onclick="Submit">Submit</button>
                        </p>

                        <p>
                            <h2>@SubmitMessage</h2>
                        </p>
                    }

                </div>
            }

            @if (@IsMergeComplete)
            {
                <div>

                    <h2>Successfully Merged @TotalFiles PDF Files.  ‚úÖ</h2>
                    <h1>üéâüéä</h1>
                    
                    <br>

                    <p>
                        <button class="button primary large icon solid fas fa-file-download" @onclick="DownloadFile">Download</button>
                    </p>

                    <p>
                        <a class="icon solid fas fa-redo alt" title="Re Do" @onclick="ReDo"></a>
                    </p>

                    <p>
                        <h2>@DownloadMessage</h2>
                    </p>

                </div>
            }

        </section>

    </div>

